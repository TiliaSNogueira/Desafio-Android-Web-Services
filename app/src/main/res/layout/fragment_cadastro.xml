<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cetacean_blue"
    tools:context=".ui.FragmentCadastro">


    <include
        android:id="@+id/include_red"
        layout="@layout/background_red"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <include
        android:id="@+id/include_white"
        layout="@layout/body_cadastro_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@id/include_red"
        app:layout_constraintEnd_toEndOf="@id/include_red"
        app:layout_constraintStart_toStartOf="@id/include_red" />


    <androidx.cardview.widget.CardView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="25dp"
        android:background="@drawable/button"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardCornerRadius="50dp"
        app:layout_constraintBottom_toTopOf="@+id/include_white"
        app:layout_constraintEnd_toEndOf="@+id/include_white"
        app:layout_constraintStart_toStartOf="@+id/include_white">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@color/white"
            android:padding="15dp"
            android:src="@drawable/profile" />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>