<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cetacean_blue"
    android:orientation="horizontal"
    tools:context=".ui.FragmentLogin">


    <include
        android:id="@+id/include_red"
        layout="@layout/background_red"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="15dp"
        android:text="Welcom to the Marvel HQ's"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/include_red"
        app:layout_constraintStart_toStartOf="@id/include_red"
        app:layout_constraintTop_toTopOf="@id/include_red" />


    <include
        android:id="@+id/include_white"
        layout="@layout/body_login_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="@id/include_red"
        app:layout_constraintStart_toStartOf="@id/include_red"
        app:layout_constraintBottom_toBottomOf="@id/include_red" />


</androidx.constraintlayout.widget.ConstraintLayout>